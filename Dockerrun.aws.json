{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "codihuston/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "codihuston/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "codihuston/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "codihuston/multi-nginx",
      "essential": true,
      "portMappings": [{
        "hostPort": 80,
        "containerPort": 80
      }],
      "links": [
        "client",
        "server"
      ]
    }
  ]
}