{
  "AWSEBDockerrunVersion":2,
  "containerDefinitions":[
      {
          "name":"client",
          "image": "codihuston/mutli-docker-client",
          "hostname":"client",
          "essential":false,
          "memory":128
      },
      {
          "name":"worker",
          "image":"codihuston/mutli-docker-worker",
          "hostname":"worker",
          "essential": false,
          "memory":128
      },
      {
          "name":"server",
          "image":"codihuston/mutli-docker-server",
          "hostname":"api",
          "essential": false,
          "memory":128
      },
      {
          "name":"nginx",
          "image":"codihuston/mutli-docker-nginx",
          "hostname":"nginx",
          "essential":true,
          "portMappings":[
              {
                  "hostPort":80,
                  "containerPort":80
              }
          ],
          "links":["client",  "server"],
          "memory":128
      }
  ]
}